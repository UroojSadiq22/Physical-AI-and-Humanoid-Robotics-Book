{
  "openapi": "3.0.0",
  "info": {
    "title": "RAG Chatbot API",
    "version": "1.0.0",
    "description": "API for the RAG Chatbot feature."
  },
  "paths": {
    "/api/query": {
      "post": {
        "summary": "Submit a query to the chatbot",
        "operationId": "post_query",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/QueryRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/QueryResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "422": {
            "description": "Validation Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "QueryRequest": {
        "type": "object",
        "properties": {
          "question": {
            "type": "string",
            "description": "The user's question."
          },
          "selected_text": {
            "type": "string",
            "description": "Optional selected text to provide context for the query.",
            "nullable": true
          }
        },
        "required": ["question"]
      },
      "QueryResponse": {
        "type": "object",
        "properties": {
          "answer": {
            "type": "string",
            "description": "The chatbot's answer."
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
